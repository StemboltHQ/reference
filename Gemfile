  gem 'sqlite3'
  gem 'irbtools'
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'libnotify'
  gem 'spork'
  gem 'rb-inotify'
  gem 'rspec-rails'
  gem 'simplecov', :require => false
  gem 'simplecov-rcov', :require => false
  gem 'fuubar'
end

group 'production' do
  gem 'pg'
  gem 'unicorn'
end
